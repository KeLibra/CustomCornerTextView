<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_coin_pet_layout"
    android:layout_width="84dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_coin_pet_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_coin_pet_long" />

    <TextView
        android:id="@+id/tv_coin_pet_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_coin_pet_long"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="6dp"
        android:background="@mipmap/icon_coin_pet_btn"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="领取"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_coin_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_coin_pet_btn"
        android:layout_marginBottom="-2dp"
        android:background="@mipmap/icon_coin_pet_size"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="666.66"
        android:textColor="#ffffff"
        android:textSize="8sp" />

</RelativeLayout>