<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <test.kezy.com.customcornertextview.view.CustomCornerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:bg_color="#fd5353"
        app:text="测试测试测试"
        app:text_size="14sp"
        app:text_color="#ffffff"
        />

    <test.kezy.com.customcornertextview.view.CustomCornerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="18dp"
        app:bg_color="#ffffff"
        app:border_color="#000000"
        app:corner_radius="12dp"
        app:text="文字文字文字"
        app:text_size="30sp"
        app:radius_border_width="1dp"/>

    <test.kezy.com.customcornertextview.view.CustomCornerTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:bg_color="#f23c6c"
        app:radius_bottom_left="0dp"
        app:radius_bottom_right="15dp"
        app:radius_top_left="15dp"
        app:radius_top_right="15dp"
        app:text="这啥这啥这啥这"
        app:text_size="36sp"
        app:text_color="#ffffff"
        app:border_color="#0000ff"
        app:radius_border_width="5dp"/>

    <test.kezy.com.customcornertextview.view.CustomCornerTextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <test.kezy.com.customcornertextview.view.CustomCornerTextView
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        app:text=" 长度长度长度长度长度 啊"
        />


</LinearLayout>