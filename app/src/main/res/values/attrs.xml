<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <declare-styleable name="CircleView">
        <!--圆的颜色-->
        <attr name="circleColor" format="color"></attr>
        <!--半径-->
        <attr name="circleRound" format="dimension"></attr>

    </declare-styleable>


    <declare-styleable name="CustomCornerTextView">
        <!--文字-->
        <attr name="text" format="string"></attr>
        <!--文字 大小-->
        <attr name="text_size" format="dimension"></attr>
        <!--背景色-->
        <attr name="bg_color" format="color"></attr>
        <!--文本颜色-->
        <attr name="text_color" format="color"></attr>
        <!--外框线  的颜色-->
        <attr name="border_color" format="color"></attr>

        <!--四个圆角的大小-->
        <attr name="corner_radius" format="dimension"></attr>
        <!--左上 圆角大小-->
        <attr name="radius_top_left" format="dimension"></attr>
        <!--右上圆角大小-->
        <attr name="radius_top_right" format="dimension"></attr>
        <!--左下 圆角大小-->
        <attr name="radius_bottom_left" format="dimension"></attr>
        <!--右下圆角大小-->
        <attr name="radius_bottom_right" format="dimension"></attr>
        <!--边框线 粗细-->
        <attr name="radius_border_width" format="dimension"></attr>

    </declare-styleable>
</resources>